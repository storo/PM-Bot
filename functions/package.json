  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.0.0",
    "@google/genai": "^1.9.0",
    "@langchain/langgraph": "^0.3.8",
    "@langchain/langgraph-swarm": "^0.0.4",
    "@langchain/mcp-adapters": "^0.5.3",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@langchain/core": "^0.3.62",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
